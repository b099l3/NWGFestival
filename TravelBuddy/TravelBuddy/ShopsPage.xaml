<?xml version="1.0" encoding="UTF-8"?>
<ContentPage 
    xmlns="http://xamarin.com/schemas/2014/forms" 
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
    x:Class="TravelBuddy.ShopsPage">
    <ContentPage.Content>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Button Text="WHS Smiths"
                Grid.Row="0"
                FontSize="45"
                Clicked="OnWHSButtonClicked"
                AutomationProperties.Name="Your nearest shop is WHSmiths and it is a 5 minute walk away"/>
        <Button Text="Boots"
                Grid.Row="1"
                Clicked="OnBootsButtonClicked"
                AutomationProperties.Name="Boots Pharmacy is a 15 minute walk from your location"/>
        <Button Text="Starbucks"
                Grid.Row="2"
                Clicked="OnStarbucksButtonClicked"
                AutomationProperties.Name="Starbucks is also just a 15 minute walk away."/>
    </Grid>
    </ContentPage.Content>
</ContentPage>
