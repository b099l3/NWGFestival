<?xml version="1.0" encoding="UTF-8"?>
<ContentPage 
    xmlns="http://xamarin.com/schemas/2014/forms" 
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
    x:Class="TravelBuddy.BarsPage">
    <ContentPage.Content>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="100"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Button Text="Back"
                Grid.Row="0"
                Clicked="OnBackButtonClicked"
                AutomationProperties.Name="Back to previous menu"/>
        <Button Text="Weatherspoons"
                Grid.Row="1"
                FontSize="45"
                Clicked="OnWeatherClicked"
                AutomationProperties.Name="Your nearest bar is Weatherspoons and it is a 5 minute walk away"/>
        <Button Text="Brew Dog"
                Grid.Row="2"
                Clicked="OnBrewdogButtonClicked"
                AutomationProperties.Name="Brew Dog is a 15 minute walk from your location"/>
    </Grid>
    </ContentPage.Content>
</ContentPage>
