<?xml version="1.0" encoding="UTF-8"?>
<ContentPage 
    xmlns="http://xamarin.com/schemas/2014/forms" 
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
    x:Class="TravelBuddy.SocialPage">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="2*"/>
        </Grid.RowDefinitions>
        <Button Text="Shops"
                Grid.Row="1"
                TextColor="White"
                BackgroundColor="Orange"
                Clicked="OnShopsButtonClicked"
                AutomationProperties.IsInAccessibleTree="true"
                AutomationProperties.Name="Near by Shops"/>
        <Button Text="Bars"
                Grid.Row="2"
                TextColor="White"
                BackgroundColor="Orange"
                Clicked="OnBarsButtonClicked"
                AutomationProperties.IsInAccessibleTree="true"
                AutomationProperties.Name="Near by Bars"/>
        <Button Text="Toilets"
                Grid.Row="2"
                TextColor="White"
                BackgroundColor="Orange"
                Clicked="OnToiletsButtonClicked"
                AutomationProperties.IsInAccessibleTree="true"
                AutomationProperties.Name="Nearest Toilet"/>
    </Grid>
</ContentPage>
