<?xml version="1.0" encoding="UTF-8"?>
<ContentPage 
    Title="Socalise"
    xmlns="http://xamarin.com/schemas/2014/forms" 
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
    x:Class="TravelBuddy.SocialPage">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Button Text="Shops"
                Grid.Row="0"
                Clicked="OnShopsButtonClicked"
                AutomationProperties.Name="Near by Shops"/>
        <Button Text="Bars"
                Grid.Row="1"
                Clicked="OnBarsButtonClicked"
                AutomationProperties.Name="Near by Bars"/>
        <Button Text="Toilets"
                Grid.Row="2"
                Clicked="OnToiletsButtonClicked"
                AutomationProperties.Name="Nearest Toilet"/>
        <Button Text="Find Travel Buddies"
                Grid.Row="3"
                FontSize="35"
                Clicked="OnSoloTravellersButtonClicked"
                AutomationProperties.Name="Find Solo Travellers"/>
    </Grid>
</ContentPage>
